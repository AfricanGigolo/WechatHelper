<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/fl_fm1up_1"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nkw_title"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:text="添加关键词"
                android:textSize="25dp"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_re_btn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/bt_nkw_re"
                />

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关键词"
            android:id="@+id/tv_nkw_keyword"
            android:textSize="30dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="权值"
            android:id="@+id/tv_nkw_right"
            android:layout_below="@+id/tv_nkw_keyword"
            android:layout_alignStart="@+id/tv_nkw_keyword"
            android:textSize="30dp"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_nkw_keyword"
            android:layout_toEndOf="@+id/tv_nkw_keyword"
            android:id="@+id/et_nkw_keyword"
            android:textColor="@android:color/black"
            android:hint="请输入关键词"
            android:textSize="28dp"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_nkw_right"
            android:textColor="@android:color/black"
            android:hint="请输入权值"
            android:layout_marginLeft="20dp"
            android:textSize="28dp"
            android:layout_alignBaseline="@+id/tv_nkw_right"
            android:textColorHint="@android:color/darker_gray"
            android:layout_toEndOf="@+id/tv_nkw_keyword" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_nkw_bottom"
            >

            <Button
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:layout_height="50dp"
                android:text="取消"
                android:id="@+id/bt_nkw_cancle"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:text="确定"
                android:id="@+id/bt_nkw_yes"
                android:layout_height="50dp"
                android:layout_weight="1"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>